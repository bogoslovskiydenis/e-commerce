# Основные настройки
NODE_ENV=development
PORT=3001

# База данных PostgreSQL
DATABASE_URL="postgresql://balloonshop:password@localhost:5432/balloonshop?schema=public"

# Redis (опционально)
REDIS_URL="redis://localhost:6379"

# JWT секреты (ОБЯЗАТЕЛЬНО поменяйте в продакшене!)
JWT_SECRET="your-super-secret-jwt-key-change-in-production"
JWT_EXPIRES_IN="7d"
JWT_REFRESH_SECRET="your-refresh-secret-change-in-production"
JWT_REFRESH_EXPIRES_IN="30d"

# Frontend URL
FRONTEND_URL="http://localhost:3000"

# Логирование
LOG_LEVEL="info"
LOG_CONSOLE="true"
LOG_QUERIES="false"

# Безопасность
BCRYPT_ROUNDS="12"
RATE_LIMIT_WINDOW="900000"
RATE_LIMIT_MAX="100"

# Загрузка файлов
UPLOAD_PATH="./uploads"
MAX_FILE_SIZE="10485760"