# Порт сервера
PORT=3001

# URL фронтенда (ИСПРАВЛЕНО: добавлен порт 3010)
FRONTEND_URL=http://localhost:3000,http://localhost:3010

DATABASE_URL="postgresql://denisbogoslovskiy@localhost:5432/balloonshop?schema=public"

# JWT секреты
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_REFRESH_SECRET=your-super-secret-refresh-jwt-key-change-in-production
JWT_EXPIRES_IN=1h
JWT_REFRESH_EXPIRES_IN=7d

# Redis
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# Окружение
NODE_ENV=development

# Email (опционально)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-password
SMTP_FROM=noreply@balloonshop.com

# Загрузка файлов
UPLOAD_PATH=./uploads
MAX_FILE_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/webp,image/gif
UPLOAD_PUBLIC_URL=/uploads

# Безопасность
BCRYPT_ROUNDS=12
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX=100
CORS_ENABLED=true
HELMET_ENABLED=true

# API
API_PREFIX=/api
API_VERSION=v1
API_KEY_HEADER=X-API-Key

# Логирование
LOG_LEVEL=info
LOG_FILE=./logs/app.log
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14
LOG_CONSOLE=true
LOG_QUERIES=true

# Мониторинг
ENABLE_METRICS=false
METRICS_PORT=9090
ENABLE_HEALTH_CHECK=true
HEALTH_CHECK_PATH=/health